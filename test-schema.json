{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Banco de Preguntas",
  "description": "Estructura JSON para bancos de preguntas que se cargan dinámicamente en la base de datos para generar tests",
  "type": "object",
  "required": ["bank_id", "title", "questions"],
  "properties": {
    "bank_id": {
      "type": "string",
      "pattern": "^bank_[0-9]{4}[0-9]{2}[0-9]{2}_[0-9]{3}$",
      "description": "ID único del banco en formato bank_YYYYMMDD_XXX",
      "example": "bank_20250829_001"
    },
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 100,
      "description": "Título descriptivo del banco de preguntas",
      "example": "Banco de Preguntas - Afiliación y Cotización SS"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Descripción opcional del banco de preguntas",
      "example": "Banco centrado en requisitos de afiliación y procedimientos de cotización"
    },
    "questions": {
      "type": "array",
      "minItems": 5,
      "maxItems": 70,
      "description": "Array de preguntas del test",
      "items": {
        "$ref": "#/definitions/question"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Metadatos adicionales",
      "properties": {
        "source_documents": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Lista de documentos fuente utilizados"
        },
        "generated_by": {
          "type": "string",
          "default": "Claude Code",
          "description": "Herramienta utilizada para generar el test"
        },
        "version": {
          "type": "string",
          "default": "1.0",
          "description": "Versión del esquema"
        }
      }
    }
  },
  "definitions": {
    "question": {
      "type": "object",
      "required": ["id", "question", "options", "correct_answer"],
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1,
          "description": "ID único de la pregunta dentro del test"
        },
        "question": {
          "type": "string",
          "minLength": 20,
          "maxLength": 500,
          "description": "Texto de la pregunta"
        },
        "options": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "description": "Exactamente 4 opciones de respuesta",
          "items": {
            "type": "string",
            "minLength": 5,
            "maxLength": 200
          }
        },
        "correct_answer": {
          "type": "integer",
          "minimum": 0,
          "maximum": 3,
          "description": "Índice de la respuesta correcta (0-3)"
        },
        "explanation": {
          "type": "string",
          "maxLength": 300,
          "description": "Explicación opcional de por qué es correcta la respuesta"
        },
        "source_info": {
          "type": "object",
          "description": "Información sobre la fuente de la pregunta",
          "properties": {
            "document": {
              "type": "string",
              "description": "Nombre del documento fuente"
            },
            "section": {
              "type": "string", 
              "description": "Sección o artículo específico"
            },
            "page": {
              "type": "integer",
              "minimum": 1,
              "description": "Página del documento (si aplica)"
            },
            "legal_reference": {
              "type": "string",
              "description": "Referencia legal específica"
            }
          }
        },
        "difficulty": {
          "type": "string",
          "enum": ["easy", "medium", "hard"],
          "description": "Nivel de dificultad de esta pregunta específica"
        },
        "category": {
          "type": "string",
          "description": "Categoría temática de la pregunta - cualquier string es válido",
          "example": "afiliacion"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Palabras clave para filtrado y búsqueda",
          "example": ["afiliacion", "obligatoria", "única"]
        },
        "estimated_time_seconds": {
          "type": "integer",
          "minimum": 30,
          "maximum": 300,
          "description": "Tiempo estimado para responder la pregunta en segundos",
          "default": 90,
          "example": 90
        }
      }
    }
  }
}