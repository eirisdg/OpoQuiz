{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test de Seguridad Social",
  "description": "Estructura JSON para tests de Seguridad Social generados manualmente desde Claude Code",
  "type": "object",
  "required": ["test_id", "title", "created_at", "questions"],
  "properties": {
    "test_id": {
      "type": "string",
      "pattern": "^test_[0-9]{4}[0-9]{2}[0-9]{2}_[0-9]{3}$",
      "description": "ID único del test en formato test_YYYYMMDD_XXX",
      "example": "test_20250828_001"
    },
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 100,
      "description": "Título descriptivo del test",
      "example": "Test de Afiliación y Cotización SS - Agosto 2025"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Descripción opcional del test",
      "example": "Test centrado en requisitos de afiliación y procedimientos de cotización"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha y hora de creación del test",
      "example": "2025-08-28T10:30:00Z"
    },
    "category": {
      "type": "string",
      "enum": ["afiliacion", "cotizacion", "prestaciones", "procedimientos", "general"],
      "description": "Categoría principal del test"
    },
    "difficulty": {
      "type": "string",
      "enum": ["easy", "medium", "hard", "mixed"],
      "description": "Nivel de dificultad del test"
    },
    "estimated_duration": {
      "type": "integer",
      "minimum": 5,
      "maximum": 120,
      "description": "Duración estimada en minutos",
      "example": 45
    },
    "questions": {
      "type": "array",
      "minItems": 5,
      "maxItems": 70,
      "description": "Array de preguntas del test",
      "items": {
        "$ref": "#/definitions/question"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Metadatos adicionales",
      "properties": {
        "source_documents": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Lista de documentos fuente utilizados"
        },
        "generated_by": {
          "type": "string",
          "default": "Claude Code",
          "description": "Herramienta utilizada para generar el test"
        },
        "version": {
          "type": "string",
          "default": "1.0",
          "description": "Versión del esquema"
        }
      }
    }
  },
  "definitions": {
    "question": {
      "type": "object",
      "required": ["id", "question", "options", "correct_answer"],
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1,
          "description": "ID único de la pregunta dentro del test"
        },
        "question": {
          "type": "string",
          "minLength": 20,
          "maxLength": 500,
          "description": "Texto de la pregunta"
        },
        "options": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "description": "Exactamente 4 opciones de respuesta",
          "items": {
            "type": "string",
            "minLength": 5,
            "maxLength": 200
          }
        },
        "correct_answer": {
          "type": "integer",
          "minimum": 0,
          "maximum": 3,
          "description": "Índice de la respuesta correcta (0-3)"
        },
        "explanation": {
          "type": "string",
          "maxLength": 300,
          "description": "Explicación opcional de por qué es correcta la respuesta"
        },
        "source_info": {
          "type": "object",
          "description": "Información sobre la fuente de la pregunta",
          "properties": {
            "document": {
              "type": "string",
              "description": "Nombre del documento fuente"
            },
            "section": {
              "type": "string", 
              "description": "Sección o artículo específico"
            },
            "page": {
              "type": "integer",
              "minimum": 1,
              "description": "Página del documento (si aplica)"
            }
          }
        },
        "difficulty": {
          "type": "string",
          "enum": ["easy", "medium", "hard"],
          "description": "Nivel de dificultad de esta pregunta específica"
        },
        "category": {
          "type": "string",
          "enum": ["afiliacion", "cotizacion", "prestaciones", "procedimientos", "general"],
          "description": "Categoría temática de la pregunta"
        }
      }
    }
  }
}